{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "newLine": "LF",
    "skipLibCheck": true,
    "lib": ["esnext"],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
  ]
}
